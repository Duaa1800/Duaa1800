class Course {
    private String name, id; 
    protected int credits;

    public Course(String name, String id) { this(name, id, 0); }
    public Course(String name, String id, int credits) { this.name = name; this.id = id; this.credits = credits; }
    
    public String getDetails() { return "Course: " + name + ", ID: " + id; }
}

class Instructor extends Course {
    private String name; 
    protected String department;

    public Instructor(String name, String department) { super("Unknown", "N/A"); this.name = name; this.department = department; }
    public Instructor(String name, String department, Course course) { super(course.name, course.id, course.credits); this.name = name; this.department = department; }

    @Override
    public String getDetails() { return "Instructor: " + name + ", " + super.getDetails(); }
}

public class CourseManagement {
    public static void main(String[] args) {
        Course c = new Course("Java Programming", "CS101", 3);
        Instructor i = new Instructor("Alice Smith", "CS", c);
        
        System.out.println(c.getDetails());
        System.out.println(i.getDetails());
    }
}
