import java.util.Random;

public class InventoryManagement {
    public static void main(String[] args) {
        int[][] stock = new int[5][4];
        Random rand = new Random();

        // Initialize stock levels and display them
        int[] totalStock = new int[5];
        for (int i = 0; i < 5; i++) {
            for (int j = 0; j < 4; j++) {
                stock[i][j] = rand.nextInt(101);
                totalStock[i] += stock[i][j];
                System.out.printf("Product %d, Branch %d: %d%n", i + 1, j + 1, stock[i][j]);
            }
        }

        // Find product with highest total stock
        int maxIndex = 0;
        for (int i = 1; i < totalStock.length; i++) 
            if (totalStock[i] > totalStock[maxIndex]) maxIndex = i;

        System.out.printf("Product %d has the highest total stock: %d%n", maxIndex + 1, totalStock[maxIndex]);
    }
}
