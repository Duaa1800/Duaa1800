class Book {
    private String title, author, ISBN;
    private int yearPublished, copiesAvailable;

    public Book(String title, String author) { this(title, author, null, 0, 0); }
    public Book(String title, String author, String ISBN) { this(title, author, ISBN, 0, 0); }
    public Book(String title, String author, String ISBN, int yearPublished, int copiesAvailable) {
        this.title = title; this.author = author; this.ISBN = ISBN; 
        this.yearPublished = yearPublished; this.copiesAvailable = copiesAvailable;
    }

    public void display() {
        System.out.printf("%s by %s (ISBN: %s) - Year: %d, Copies: %d%n", 
                          title, author, ISBN == null ? "N/A" : ISBN, yearPublished, copiesAvailable);
    }

    public void updateCopies(int newCopies) { copiesAvailable = newCopies; }
}

public class LibraryManagement {
    public static void main(String[] args) {
        Book[] books = {
            new Book("1984", "George Orwell"),
            new Book("The Great Gatsby", "F. Scott Fitzgerald", "9780743273565"),
            new Book("To Kill a Mockingbird", "Harper Lee", "9780061120084", 1960, 5)
        };

        for (Book book : books) book.display();
        books[2].updateCopies(10); // Update copies for the third book
        System.out.println("\nAfter updating copies:");
        books[2].display();
    }
}
